<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_splash"
    tools:context=".fragment.HomeFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btStartSearch"
        android:layout_width="234dp"
        android:layout_height="65dp"
        android:background="#73F1F0F0"
        android:backgroundTint="#DDFFFFFF"
        android:text="Start your search"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMileInstructions"
        app:layout_constraintVertical_bias="0.089" />

    <EditText
        android:id="@+id/etZipCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Zip Code..."
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btStartSearch"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toStartOf="@+id/btStartSearch"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etMileRadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Mile Radius..."
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/etZipCode"
        app:layout_constraintTop_toBottomOf="@+id/etZipCode" />

    <TextView
        android:id="@+id/tvMileInstructions"
        android:layout_width="316dp"
        android:layout_height="19dp"
        android:fontFamily="sans-serif-black"
        android:text="If you have no preference for mile radius, put 0"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMileRadius" />

</androidx.constraintlayout.widget.ConstraintLayout>