<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_splash"
    tools:context=".SearchPageActivity">

    <Spinner
        android:id="@+id/spFoodTypes"
        android:layout_width="361dp"
        android:layout_height="34dp"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRating" />

    <TextView
        android:id="@+id/tvFoodTypes"
        android:layout_width="145dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="380dp"
        android:text="Food Types:"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/spPriceRange"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btSurpriseMe"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_marginBottom="120dp"
        android:text="Surprise me"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="254dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:text="Rating Preferences:"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tvPriceRange"
        app:layout_constraintTop_toBottomOf="@+id/spPriceRange" />

    <TextView
        android:id="@+id/tvPriceRange"
        android:layout_width="145dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="172dp"
        android:text="Price Range:"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/spPriceRange"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spPriceRange"
        android:layout_width="361dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPriceRange" />

    <Spinner
        android:id="@+id/spRating"
        android:layout_width="361dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRating" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btRandomize"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_marginBottom="208dp"
        android:text="randomize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>