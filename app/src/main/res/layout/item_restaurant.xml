<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7A30305E"
    android:outlineSpotShadowColor="#1667A8">

    <ImageView
        android:id="@+id/ivRestPic"
        android:layout_width="139dp"
        android:layout_height="148dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvRestName"
        android:layout_width="38dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="60dp"
        android:fontFamily="monospace"
        android:text="Name"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ivRestPic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-light"
        android:text="date"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/tvRestName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvYelpUrl"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:linksClickable="true"
        android:text="Yelp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/ivRestPic"
        app:layout_constraintTop_toBottomOf="@+id/tvRestName" />

    <TextView
        android:id="@+id/tvUsernameFeed"
        android:layout_width="83dp"
        android:layout_height="22dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>